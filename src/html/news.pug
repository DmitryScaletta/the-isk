include mixins/breadcrumbs.pug
include mixins/news-preview-item.pug

doctype html
html(lang='ru')
  include includes/head.pug
  body
    include includes/header.pug

    section.section.section-news
      .section__inner
        +breadcrumbs(['Новости'])
        h2.section__title Новости
        .section__content
          each newsItem, i in news.items
            - var text = (i % 2 === 0) ? news.largeText : news.smallText;
            +news-preview-item(newsItem, text)

    script(src='js/app.js')

    include includes/footer.pug
